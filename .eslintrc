{
    "parser": "babel-eslint",
    "env": {
        "es6": true,
        "jest": true,
        "node": true,
        "browser": true
    },
    "ecmaFeatures": {
        "destructuring": true
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "max-len": [1, 150, 2, {"ignoreComments": true}],
        "semi": 0
    }
}